{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "title": "The Root Schema",
  "required": ["title", "description", "price", "count"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 4,
      "maxLength": 100
    },
    "description": {
      "type": "string"
    },
    "price": {
      "type": "number",
      "minimum": 0,
      "exclusiveMinimum": true
    },
    "count": {
      "type": "number",
      "minimum": 1
    }
  }
}
